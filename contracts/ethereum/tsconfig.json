{
    "compilerOptions": {
        "target": "ESNext",
        "strict": true,
        "preserveConstEnums": true,
        "noEmit": true,
        "sourceMap": false,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": [
        "./helpers/*.ts",
        "./lib/*.ts",
        "./scripts/*.ts",
        "./test/*.ts"  
    ],
    "typeRoots": [
        "node_modules/@types"
    ],
    "files": [
        "hardhat.config.ts"
    ]
}