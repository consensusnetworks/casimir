{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/recommended",
        "plugin:@typescript-eslint/recommended",
        "@vue/eslint-config-typescript"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", 2],
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "vue/multi-word-component-names": "off",
        "max-len": ["error", { "code": 999 }]
    },
    "ignorePatterns": [
        "contracts/**/scripts/resources",
        "scripts/**/resources",
        "cdk.out",
        "*.js"
    ]
}