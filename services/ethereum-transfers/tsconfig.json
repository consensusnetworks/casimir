{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "allowJs": true,
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}