{
    "name": "@casimir/cdk",
    "bin": {
        "index": "src/index.ts"
    },
    "scripts": {
        "build": "echo 'Warning: @casimir/cdk build not specified. Disregard this warning and any listed errors above if @casimir/cdk is not needed for the current project build.' && exit 0",
        "test": "jest",
        "bootstrap": "npx cdk bootstrap",
        "metadata": "npx cdk metadata",
        "synth": "npx cdk synth --no-staging",
        "deploy": "npx cdk deploy '**' --require-approval never --outputs-file cdk-outputs.json --force",
        "destroy": "npx cdk destroy '**' --force --require-approval never"
    },
    "devDependencies": {
        "@types/jest": "^29.4.0",
        "@types/node": "^17.0.35",
        "@types/source-map-support": "^0.5.4",
        "aws-cdk": "^2.26.0",
        "esno": "^0.16.3",
        "jest": "^29.4.0",
        "ts-jest": "^29.0.5"
    },
    "dependencies": {
        "@aws-cdk/aws-glue-alpha": "^2.31.0-alpha.0",
        "aws-cdk-lib": "^2.26.0",
        "constructs": "^10.0.0",
        "source-map-support": "^0.5.16"
    }
}
